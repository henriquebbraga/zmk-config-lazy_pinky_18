#include <dt-bindings/zmk/matrix_transform.h>

/ {

	chosen {
        /* zmk,backlight = &backlight; */
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
        zmk,backlight = &backlight;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <18>;
		rows = <1>;
		map = <
                RC(0,0) RC(0,1) RC(0,2)  		RC(0,11)  RC(0,10)  RC(0,9)
        RC(0,3) RC(0,4) RC(0,5) RC(0,6)     RC(0,15)  RC(0,14)  RC(0,13)  RC(0,12)
                        RC(0,7) RC(0,8)     RC(0,17)  RC(0,16)
		>;
	};

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        input-gpios
        = <&xiao_d 2   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 1   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 0   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 3   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 4   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 5   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 6   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 8   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        , <&xiao_d 7   (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
        ;
    };

    backlight: gpioleds {
    compatible = "gpio-leds";
    label = "Backlight LEDs";
    gpio_led_0 {
        gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;
        label = "Backlight LED 0";
    };
};

};
